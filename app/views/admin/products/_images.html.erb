<% if product.product_images.any? %>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% product.product_images.includes(image_attachment: :blob).each do |proimg| %>
      <% if proimg == product.product_images.first %>
        <div class="carousel-item active">
          <strong><%= t("admin.product.image") + product.product_images.find_index(proimg).to_s %></strong>
          <%= image_tag(proimg.thumbnail(proimg.image), class: "d-block w-100") if proimg.image.present?%>
        </div>
      <% elsif proimg == product.product_images.last %>
        <% break %>
      <% else %>
        <div class="carousel-item">
          <strong><%= t("admin.product.image") + product.product_images.find_index(proimg).to_s %></strong>
          <%= image_tag(proimg.thumbnail(proimg.image), class: "d-block w-100") if proimg.image.present?%>
        </div>
      <% end %>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<% end %>
